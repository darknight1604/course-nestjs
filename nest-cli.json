{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": ".",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/task-management/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/task-management",
  "projects": {
    "caching-database": {
      "type": "library",
      "root": "libs/caching-database",
      "entryFile": "index",
      "sourceRoot": "libs/caching-database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/caching-database/tsconfig.lib.json"
      }
    },
    "notification": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification/tsconfig.app.json"
      }
    },
    "queue": {
      "type": "library",
      "root": "libs/queue",
      "entryFile": "index",
      "sourceRoot": "libs/queue/src",
      "compilerOptions": {
        "tsConfigPath": "libs/queue/tsconfig.lib.json"
      }
    },
    "sample-library": {
      "type": "library",
      "root": "libs/sample-library",
      "entryFile": "index",
      "sourceRoot": "libs/sample-library/src",
      "compilerOptions": {
        "tsConfigPath": "libs/sample-library/tsconfig.lib.json"
      }
    },
    "task-management": {
      "type": "application",
      "root": "apps/task-management",
      "entryFile": "main",
      "sourceRoot": "apps/task-management/src",
      "compilerOptions": {
        "tsConfigPath": "apps/task-management/tsconfig.app.json"
      }
    }
  }
}